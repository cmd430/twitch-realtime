{
  "name": "twitch-realtime",
  "version": "0.7.0",
  "main": "index.js",
  "description": "A small library to use the Twitch PubSub API",
  "author": "Bradley 'cmd430' Treweek, (original author: Johannes Diehl)",
  "keywords": [
    "twitch",
    "realtime",
    "pubsub"
  ],
  "license": "MIT",
  "files": [
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cmd430/twitch-realtime.git"
  },
  "engines": {
    "node": ">=11.0.0"
  },
  "bugs": "https://github.com/cmd430/twitch-realtime/issues",
  "dependencies": {
    "shortid": "^2.2.15",
    "ws": "^7.2.1"
  },
  "scripts": {
    "test": "eslint \"**/*.js\"",
    "docs": "jsdoc index.js"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": "eslint:recommended",
    "rules": {
      "semi": [
        2,
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "no-unused-vars": [
        2,
        {
          "argsIgnorePattern": "^_",
          "caughtErrors": "none"
        }
      ],
      "no-control-regex": 0,
      "global-require": 1,
      "camelcase": 0,
      "dot-notation": 1,
      "no-else-return": 2,
      "no-plusplus": 2,
      "constructor-super": 2,
      "prefer-arrow-callback": 1,
      "object-shorthand": 2,
      "object-curly-spacing": 1,
      "object-property-newline": [
        1,
        {
          "allowMultiplePropertiesPerLine": true
        }
      ],
      "no-var": 2,
      "no-inner-declarations": 0
    }
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "jsdoc": "^3.6.3"
  }
}
